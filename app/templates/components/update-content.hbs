{{#if updateContentForm}}
  <h4>Update {{content.author}}'s {{content.type}}</h4>
    <div>
      <form>
        <div class="form-group">
          <label for="title">Title</label>
          {{input value=title id="title" placeholder=content.title}}
        </div>

        <div class="form-group">
          <label for="author">Author</label>
          {{input value=author id="author" placeholder=content.author}}
        </div>

        <div class="form-group">
          <label for="type">Type</label>
          {{input value=type id="type" placeholder=content.type}}
        </div>

        <div class="form-group">
          <label for="image">Image URL</label>
          {{input value=image id="image" placeholder=content.image}}
        </div>

        <div class="form-group">
          <label for="time">Time</label>
          {{input value=time id="time" placeholder=content.time}}
        </div>

        <button {{action 'update' content}}>Save</button>
      </form>
    </div>
{{else}}
    <button {{action 'updateContentForm'}}>Update</button>
{{/if}}
